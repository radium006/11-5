    <h1>Add Post</h1>
    <form action="/posts" method="POST">
        <input type="date" name="date">
        <input type="text" name="title" placeholder="Enter post title"> 
        <input type="text" name="entry" placeholder="Enter your post"> 
        <input type="submit" value="Update">
    </form>
</body>
</html>